/** @var $block \Magento\Sales\Block\Order\Email\Items\DefaultItems */
/** @var $helper \Smartosc\CustomBundleProduct\Helper\Data */

/** @var $_item \Magento\Sales\Model\Order\Item */
$_item = $block->getItem();
$_order = $_item->getOrder();
$helper = $this->helper('Smartosc\CustomBundleProduct\Helper\Data');
$qtyOrdered = (int)$_item->getQtyOrdered();
$isReportServiceProduct = $helper->isReportServiceProduct($_item->getProductId()) && $qtyOrdered < 1;
?>
<tr>
    <td class="item-info<?= ($block->getItemOptions() ? ' has-extra' : '') ?>">
        <p class="product-name"><?= $block->escapeHtml($_item->getName()) ?></p>
        <?php if ($block->getItemOptions()) : ?>
            <dl class="item-options">
                <?php foreach ($block->getItemOptions() as $option) : ?>
                    <dt><strong><em><?= $block->escapeHtml($option['label']) ?></em></strong></dt>
                    <dd>
                        <?= /* @noEscape */  nl2br($block->escapeHtml($option['value'])) ?>
                    </dd>
                <?php endforeach; ?>
            </dl>
        <?php endif; ?>
        <?php $addInfoBlock = $block->getProductAdditionalInformationBlock(); ?>
        <?php if ($addInfoBlock) :?>
            <?= $addInfoBlock->setItem($_item)->toHtml() ?>
        <?php endif; ?>
        <?= $block->escapeHtml($_item->getDescription()) ?>
    </td>
    <td class="item-sku"><?= $block->escapeHtml($block->getSku($_item)) ?></td>
    <td class="item-price">
        <?=  /* @noEscape */ $isReportServiceProduct ? __('Not Require') : $block->escapeHtml($this->helper('Magento\Framework\Pricing\Helper\Data')->currency(number_format($_item->getBasePriceInclTax(),2,'.',''), true, false)); ?>
    </td>
    <td class="item-qty"><?= $isReportServiceProduct ? '' : (float) $_item->getQtyOrdered() ?></td>
    <td class="item-subtotal"><?= $block->escapeHtml($this->helper('Magento\Framework\Pricing\Helper\Data')->currency(number_format($_item->getRowTotalInclTax(),2,'.',''),true,false)) ?></td>
</tr>
<?php if ($_item->getGiftMessageId()
    && $_giftMessage = $this->helper(\Magento\GiftMessage\Helper\Message::class)
        ->getGiftMessage($_item->getGiftMessageId())
) : ?>
    <tr>
        <td colspan="3" class="item-extra">
            <table class="message-gift">
                <tr>
                    <td>
                        <h3><?= $block->escapeHtml(__('Gift Message')) ?></h3>
                        <strong><?= $block->escapeHtml(__('From:')) ?></strong> <?= $block->escapeHtml($_giftMessage->getSender()) ?>
                        <br /><strong><?= $block->escapeHtml(__('To:')) ?></strong> <?= $block->escapeHtml($_giftMessage->getRecipient()) ?>
                        <br /><strong><?= $block->escapeHtml(__('Message:')) ?></strong>
                        <br /><?= $block->escapeHtml($_giftMessage->getMessage()) ?>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
<?php endif; ?>
