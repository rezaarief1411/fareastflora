<?xml version="1.0"?>

<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content.aside">
            <block class="Smartosc\CustomLinked\Block\Product\ProductList\AddOn" name="product.info.addon"
                   template="Smartosc_CustomLinked::product/list/items.phtml">
                <arguments>
                    <argument name="type" xsi:type="string">add-on</argument>
                    <argument name="view_model" xsi:type="object">
                        Magento\Catalog\ViewModel\Product\Listing\PreparePostData
                    </argument>
                </arguments>
                <block class="Magento\Catalog\Block\Product\ProductList\Item\Container" name="addon.product.addto"
                       as="addto">
                    <block class="Magento\Catalog\Block\Product\ProductList\Item\AddTo\Compare"
                           name="addon.product.addto.compare" as="compare"
                           template="Magento_Catalog::product/list/addto/compare.phtml"/>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
