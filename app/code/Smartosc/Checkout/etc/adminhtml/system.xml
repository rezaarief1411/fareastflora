<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="carriers" translate="label" type="text" sortOrder="320" showInDefault="1" showInWebsite="1" showInStore="1">
            <group id="in_store_pickup" translate="label" type="text" sortOrder="900" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>In-store Pickup</label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Title</label>
                </field>
                <field id="name" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Method Name</label>
                </field>
                <field id="shipping_cost" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0" >
                    <label>Shipping Cost</label>
                    <validate>validate-number validate-zero-or-greater</validate>
                </field>
                <field id="sallowspecific" translate="label" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Ship to Applicable Countries</label>
                    <frontend_class>shipping-applicable-country</frontend_class>
                    <source_model>Magento\Shipping\Model\Config\Source\Allspecificcountries</source_model>
                </field>
                <field id="specificcountry" translate="label" type="multiselect" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Ship to Specific Countries</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                    <can_be_empty>1</can_be_empty>
                </field>
                <field id="showmethod" translate="label" type="select" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Show Method if Not Applicable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <frontend_class>shipping-skip-hide</frontend_class>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sort Order</label>
                </field>
            </group>
        </section>
        <section id="smartosc_special_date" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Special Disable Date Shipping - Pick up</label>
            <tab>smartosc_mpanel</tab>
            <resource>Smartosc_Mpanel::system_config</resource>
            <group id="special" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                <field id="disable_date" type="text" translate="label" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Special Disable Date</label>
                    <frontend_model>Smartosc\Checkout\Block\Adminhtml\Form\Field\SpecialDate</frontend_model>
                    <backend_model>Smartosc\Checkout\Model\Config\Backend\DatePickerList</backend_model>
                </field>
            </group>
        </section>
        <section id="smartosc_general" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>General</label>
            <tab>smartosc_mpanel</tab>
            <resource>Smartosc_Mpanel::system_config</resource>
            <group id="auo_create_invoice" translate="label"  type="text"  sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>Auto Create Invoice</label>
                <field id="enable" type="select" translate="label" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="pickup_time" translate="label"  type="text"  sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>Pickup Time Content</label>
                <field id="content" type="text" translate="label" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Enable</label>
                </field>
            </group>
            <group id="block_day" translate="label"  type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>Block Day</label>
                <field id="value" type="text" translate="label" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Block Day</label>
                    <validate>validate-number validate-zero-or-greater required-entry</validate>
                </field>
            </group>
            <group id="email_create_invoice" translate="label"  type="text"  sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>Disable Create Invoice</label>
                <field id="payment" type="select" translate="label" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Payment Method</label>
                    <source_model>Smartosc\Checkout\Model\Config\Source\PaymentMethods</source_model>
                </field>
            </group>
        </section>
        <section id="smartosc_authorize" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Settings</label>
            <tab>smartosc_mpanel</tab>
            <resource>Smartosc_Mpanel::system_config</resource>
            <group id="authorize_settings" translate="label"  type="text"  sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>Authorize Settings</label>
                <field id="authorize_message" translate="label" type="textarea" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0" >
                    <label>Authorize Message</label>
                </field>
            </group>
        </section>
    </system>
</config>
