<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="sales_model_service_quote_submit_before">
        <observer name="custom_fields_sales_address_save" instance="Smartosc\Checkout\Observer\SavePickUpInOrder" />
    </event>
    <event name="catalog_product_save_after">
        <observer name="add_product_custom_options" instance="Smartosc\Checkout\Observer\ProductOptions" />
    </event>
    <event name="checkout_submit_all_after">
        <observer name="smartosc_checkout_submit_all_after" instance="Smartosc\Checkout\Observer\CreateInvoice" />
    </event>
    <event name="paypal_express_place_order_success">
        <observer name="smartosc_paypal_express_place_order_success" instance="Smartosc\Checkout\Observer\CreateInvoice"/>
    </event>
    <event name="checkout_cart_add_product_complete">
        <observer name="smartAddAddonProductToCart" instance="Smartosc\Checkout\Observer\AddAddonProductCart" />
    </event>
    <event name="sales_order_shipment_save_after">
        <observer name="smartosc_checkout_shipment_save_after" instance="Smartosc\Checkout\Observer\InvoiceTrigger" />
    </event>
    <event name="checkout_submit_before">
        <observer name="smartosc_checkout_submit_before" instance="Smartosc\Checkout\Observer\SubmitBefore" />
    </event>
</config>
