<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="smartosc_customer_password" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Custom Require Customer Password</label>
            <tab>smartosc_mpanel</tab>
            <resource>Smartosc_Mpanel::system_config</resource>
            <group id="password" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                <field id="regular_expression" type="text" translate="label" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Regular Expression</label>
                </field>
            </group>
        </section>
        <section id="smartosc_storefront_configuration" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Storefront Configuration</label>
            <tab>smartosc_mpanel</tab>
            <resource>Smartosc_Mpanel::system_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>General</label>
                <field id="dob_tooltip_label" type="text" translate="label" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>D.O.B Tooltip Label</label>
                </field>
                <field id="contact_number_tooltip_label" type="text" translate="label" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Contact Number Tooltip Label</label>
                </field>
            </group>
        </section>
    </system>
</config>
